            "sameAs": [
                "https://www.youtube.com/@titi.lebricoleur",
                "https://www.facebook.com/profile.php?id=100093975961095",
                "https://instagram.com/titimenageou",
                "https://x.com/@tititechnique",
                "https://www.tiktok.com/@tititechnique"
            ]
        },
        "contactPoint": {
            "@type": "ContactPoint",
            "contactType": "Customer Support",
            "email": "titimenageou@outlook.fr",
